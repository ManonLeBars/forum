{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1 class="p-5 text-center">Un seul post</h1>

    <div class="card mb-3">
        <div class="card-header">
            <h2>Titre du post</h2>
        </div>
        <div class="card-body">
            <p class="card-title">Posté par:</p>
            <p>le {{ "now"|date("d/m/Y") }}</p>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Signaler</a>{# Faire un lien vers un formulaire de signalement#}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <h3>Commentaires</h3>            
        </div>
        <div class="card-body">

            <div>{# Faire une boucle sur cette div pour contenir tout les commentaires relatifs #}
                <p class="card-title">Posté par:</p>
                <p>le {{ "now"|date("d/m/Y") }}</p>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            </div>

            <div>
                <p class="card-title">Posté par:</p>
                <p>le {{ "now"|date("d/m/Y") }}</p>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            </div>

        </div>
    </div>
    
    <form> {# Formulaire pour soumettre un commentaire #}
        <div class="form-group mb-2 ">
            <label for="exampleFormControlTextarea1">Écris ton commentaire ici</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-5">Commenter</button>
    </form>

    
{% endblock %}