{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1 class="p-5 text-center">Forum</h1>

    <div class="mb-3">
        <a href="{{ path('post_add') }}" class="btn btn-primary">Poster</a>
    </div>
    
    <div class="mb-3 "> 
        <p>Trier par:</p> 
        <button type="button" class="btn btn-secondary">tris</button>
    </div>

    {% for post in posts %}
        <div class="card mb-3"> 
            <div class="card-header">
                <h2>{{post.title}}</h2>            
            </div>
            <div class="card-body">
                <p class="card-title">Par: {{post.user.username}}</p>
                <p>le {{ post.createdAt|date("d/m/Y") }}</p>
                <p class="card-text">{{post.body}}</p>
                <a href="{{ path('post_read', {id:post.id}) }}" class="btn btn-primary">Consulter</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
